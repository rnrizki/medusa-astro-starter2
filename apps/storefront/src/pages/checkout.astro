---
import BaseLayout from '@/layouts/BaseLayout.astro';
import CheckoutSummary from '@/components/react/CheckoutSummary';
---

<BaseLayout title="Checkout | Storefront" description="Complete your order">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl">Checkout</h1>

    <div class="mt-8 lg:grid lg:grid-cols-12 lg:gap-x-12">
      {/* Checkout Form Placeholder - Feature 31 */}
      <div class="lg:col-span-7">
        <div class="rounded-lg border border-gray-200 bg-gray-50 p-6">
          <h2 class="text-lg font-medium text-gray-900">Shipping Information</h2>
          <p class="mt-2 text-sm text-gray-600">
            Checkout form coming soon. This will collect shipping address and payment details.
          </p>
          <a
            href="/products"
            class="mt-4 inline-block text-sm font-medium text-blue-600 hover:text-blue-500"
          >
            &larr; Continue Shopping
          </a>
        </div>
      </div>

      {/* Order Summary */}
      <div class="mt-8 lg:col-span-5 lg:mt-0">
        <CheckoutSummary client:load />
      </div>
    </div>
  </div>
</BaseLayout>
