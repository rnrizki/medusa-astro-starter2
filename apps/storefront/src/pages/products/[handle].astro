---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { listProducts, getProductByHandle, getDefaultRegion } from "@/lib/medusa";
import type { StoreProduct } from "@medusajs/types";

export async function getStaticPaths() {
  try {
    // Fetch region for pricing context
    const region = await getDefaultRegion();
    // Fetch all products at build time
    const { products } = await listProducts({
      limit: 100,
      region_id: region?.id,
      fields: '*variants.calculated_price',
    });

    return products.map((product) => ({
      params: { handle: product.handle },
      props: { product },
    }));
  } catch (error) {
    console.error("Failed to fetch products for static paths:", error);
    // Return empty array to allow build to pass without backend
    return [];
  }
}

interface Props {
  product: StoreProduct;
}

const { handle } = Astro.params;
const { product } = Astro.props;

// If product wasn't passed via getStaticPaths (shouldn't happen in static mode),
// fetch it directly
let productData = product;
if (!productData && handle) {
  productData = await getProductByHandle(handle);
}

// Handle 404 for non-existent products
if (!productData) {
  return Astro.redirect("/404");
}

import ProductActions from "@/components/react/ProductActions";

// Get the main image
const mainImage = productData.thumbnail || productData.images?.[0]?.url;
---

<BaseLayout title={`${productData.title} | Storefront`} description={productData.description || `Buy ${productData.title}`} preloadImage={mainImage}>
  <main class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <nav class="mb-6">
      <a href="/products" class="text-sm text-gray-500 hover:text-gray-700">
        ‚Üê Back to products
      </a>
    </nav>

    <div class="grid gap-8 md:grid-cols-2">
      <!-- Product Image -->
      <div class="aspect-square overflow-hidden rounded-lg bg-gray-100">
        {mainImage ? (
          <img
            src={mainImage}
            alt={productData.title}
            loading="eager"
            fetchpriority="high"
            width="800"
            height="800"
            class="h-full w-full object-cover object-center"
          />
        ) : (
          <div class="flex h-full w-full items-center justify-center text-gray-400">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-24 w-24"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            </svg>
          </div>
        )}
      </div>

      <!-- Product Info -->
      <div class="flex flex-col">
        <h1 class="text-3xl font-bold text-gray-900">{productData.title}</h1>

        <div class="mt-4">
          <ProductActions product={productData} client:load />
        </div>

        {productData.description && (
          <div class="mt-6 prose prose-sm text-gray-600" set:html={productData.description} />
        )}
      </div>
    </div>
  </main>
</BaseLayout>
